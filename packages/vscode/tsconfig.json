{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "sourceMap": true,
    "outDir": "./out",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@biasguard/security": ["../core/dist/security"],
      "@biasguard/one": ["../core/src/one.ts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "out"]
}
