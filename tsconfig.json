{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@biasguard/one": ["packages/core/src/one.ts"],
      "@biasguard/security": ["packages/core/src/security"],
      "@biasguard/*": ["packages/*/src"]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowJs": true,
    "types": ["node", "chrome"],
    "allowImportingTsExtensions": true
  },

  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "allowImportingTsExtensions": true
    }
  }
}
