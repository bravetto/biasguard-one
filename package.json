{
  "name": "biasguard-monorepo",
  "version": "4.3.0",
  "private": true,
  "description": "BiasGuard Monorepo - Platform-agnostic bias detection and epistemic validation",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:core": "npm run build -w @biasguard/core",
    "build:vscode": "npm run compile -w biasguard-vscode",
    "watch": "npm run watch --workspaces --parallel",
    "clean": "rm -rf packages/*/dist packages/*/out",
    "test": "npm run test:core && npm run test:gate",
    "test:core": "node tests/one.test.js",
    "test:gate": "node tests/gate.test.js",
    "test:all": "npm run test && npm run jacob && npm run honeypot && npm run mirror",
    "jacob": "node packages/core/dist/adversarial/jacob.js",
    "honeypot": "node tests/honeypot.test.js",
    "mirror": "node tests/brokenMirror.test.js",
    "ironlotus": "npm run jacob && npm run honeypot && npm run mirror",
    "lint:md": "markdownlint-cli2 '**/*.md' '!node_modules' '!out' '!dist' '!releases' '!packages/*/node_modules'",
    "lint:md:fix": "markdownlint-cli2 --fix '**/*.md' '!node_modules' '!out' '!dist' '!releases' '!packages/*/node_modules'",
    "pristine": "npm run lint:md && npm test",
    "vscode:package": "cd packages/vscode && vsce package"
  },
  "devDependencies": {
    "markdownlint-cli2": "^0.20.0",
    "typescript": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/local/biasguard"
  },
  "license": "MIT"
}
